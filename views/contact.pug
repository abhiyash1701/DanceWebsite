        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Enter your name")
            input(type="phone", class="myInput", name="name", placeholder="Enter your name")
            input(type="email", class="myInput", name="name", placeholder="Enter your name")
            input(type="text", class="myInput", name="name", placeholder="Enter your address")
            input(type="text", class="myInput", name="name", placeholder="Enter your concern")
